{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "fastmcp_agents.cli",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--mcp-transport",
                "sse",
                "--model",
                "vertex_ai/gemini-2.5-flash-preview-05-20"
            ]
        },
        // Debug Tests config
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "envFile": "${workspaceFolder}/.env",
            "purpose": [
                "debug-test"
            ],
            "args": [
                "-s" // Disable Captures
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Bundled - Run Server over SSE",
            "type": "debugpy",
            "request": "launch",
            "module": "fastmcp_agents.cli.base",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/agent-working-dir",
            "args": [
                "--transport",
                "sse",
                "config",
                "--bundled",
                "${input:server}",
                "run"
            ]
        },
        {
            "name": "Bundled - Run Mutable Server over SSE",
            "type": "debugpy",
            "request": "launch",
            "module": "fastmcp_agents.cli.base",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/agent-working-dir",
            "args": [
                "--transport",
                "sse",
                "--mutable-agents",
                "--agent-only",
                "config",
                "--bundled",
                "${input:server}",
                "run"
            ]
        },
        {
            "name": "Bundled - Call Agent in Server",
            "type": "debugpy",
            "request": "launch",
            "module": "fastmcp_agents.cli.base",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/agent-working-dir",
            "args": [
                "config",
                "--bundled",
                "${input:server}",
                "call",
                "${input:agent}",
                "{\"task\": \"${input:task}\"}",
                "run"
            ]
        }
    ],
    "inputs": [
        {
            "id": "server",
            "description": "Select server",
            "type": "pickString",
            "options": [
                "claude_claude-code-mcp",
                "cyanheads_git-mcp-server",
                "evaluator_optimizer",
                "flow_code-agent",
                "flow_github-triage",
                "github_github-mcp-server",
                "mcp_git",
                "motherduckdb_mcp-server-motherduck",
                "nickclyde_duckduckgo-mcp-server",
                "strawgate_filesystem-operations-mcp",
                "strawgate_aider-wrapper-mcp",
                "tumf_mcp-text-editor",
                "wrale_mcp-server-tree-sitter",
            ],
            "default": "flow_code-agent"
        },
        {
            "type": "promptString",
            "id": "agent",
            "description": "Name of the curator Agent to call.",
            "default": "ask_github_agent"
        },
        {
            "type": "promptString",
            "id": "task",
            "description": "Task to perform. Avoid double quotes if you want to have a good time.",
            "default": "Run Git Status please"
        }
    ]
}